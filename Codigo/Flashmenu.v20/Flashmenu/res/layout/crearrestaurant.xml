<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.flashmenu.aplicacion.crearRestaurant">

    <!-- Name Label -->


    <!-- Input Name -->

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Registrar restaurant"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="31sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="vertical" >

        <!-- <EditText
            android:id="@+id/restid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="id"
            android:inputType="number" />-->

        <EditText
            android:id="@+id/restnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre restaurant"
            android:inputType="textPersonName" >
             <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/resttipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="tipo"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/restdescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Descripcion"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/restcaracteristicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:hint="Caracteristicas"
            android:inputType="textMultiLine" />

           

        <EditText
            android:id="@+id/restemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/restdireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:hint="Direccion"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/crearrest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                     android:background="#0F2E66"
            android:text="Enviar"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>